@model IEnumerable<DataTables.Models.Sells>

@{
    ViewData["Title"] = "Product List";
}

<h2>@ViewData["Title"]</h2>
<div style="display: flex; justify-content: space-between; align-items: center;">
    <form method="get" style="margin-right: 10px;">
        <input type="text" name="searchString" placeholder="Search by Product Name" value="" />
        <button type="submit">Search</button>
    </form>
    <form method="get" style="display: flex; gap: 10px;">
        <input type="hidden" name="searchString" value="@ViewData["SearchString"]" />
        <input type="hidden" name="page" value="@ViewData["CurrentPage"]" />
        <input type="hidden" name="pageSize" value="@ViewData["PageSize"]" />

        <button type="submit" class="btn btn-success" formaction="@Url.Action("ExportToExcel", "Home")">
            Export to Excel
        </button>

        <button type="submit" class="btn btn-danger" formaction="@Url.Action("ExportToPDF", "Home")">
            Export to PDF
        </button>
    </form>


</div>
<br>

<table id="productTable" class="table table-striped">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                <a href="@Url.Action("Index", new { sortOrder = ViewData["NameSortParm"] })">Product Name</a>
            </th>
            <th>Description</th>
            <th>
                <a href="@Url.Action("Index", new { sortOrder = ViewData["CategorySortParm"] })">Category</a>
            </th>
            <th>
                <a href="@Url.Action("Index", new { sortOrder = ViewData["PriceSortParm"] })">Price</a>
            </th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.ProductName</td>
                    <td>@product.ProductDescription</td>
                    <td>@product.ProductCategory</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                </tr>
            }
        }
    </tbody>
</table>
<div>
    @if ((int)ViewData["CurrentPage"] > 1)
    {
        <a href="@Url.Action("Index", new { page = (int)ViewData["CurrentPage"] - 1, searchString = ViewData["SearchString"] })">Previous</a>
    }

    @for (int i = 1; i <= (int)ViewData["TotalPages"]; i++)
    {
        <a href="@Url.Action("Index", new { page = i, searchString = ViewData["SearchString"] })" class="@(i == (int)ViewData["CurrentPage"] ? "active" : "")">@i</a>
    }

    @if ((int)ViewData["CurrentPage"] < (int)ViewData["TotalPages"])
    {
        <a href="@Url.Action("Index", new { page = (int)ViewData["CurrentPage"] + 1, searchString = ViewData["SearchString"] })">Next</a>
    }
</div>
